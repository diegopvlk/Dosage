{
  "app-id": "io.github.diegopvlk.Dosage",
  "runtime": "org.gnome.Platform",
  "runtime-version": "47",
  "sdk": "org.gnome.Sdk",
  "command": "io.github.diegopvlk.Dosage",
  "finish-args": [
    "--share=ipc",
    "--socket=fallback-x11",
    "--device=dri",
    "--socket=wayland",
    "--system-talk-name=org.freedesktop.login1",
    "--socket=pulseaudio"
  ],
  "cleanup": [
    "/include",
    "/lib/pkgconfig",
    "/man",
    "/share/doc",
    "/share/gtk-doc",
    "/share/man",
    "/share/pkgconfig",
    "*.la",
    "*.a"
  ],
  "modules": [
    {
      "name": "libportal",
      "buildsystem": "meson",
      "config-opts": ["-Ddocs=false", "-Dvapi=false"],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/flatpak/libportal",
          "tag": "0.8.1"
        }
      ]
    },
    {
      "name": "blueprint-compiler",
      "cleanup": ["*"],
      "buildsystem": "meson",
      "sources": [
        {
          "type": "git",
          "url": "https://gitlab.gnome.org/jwestman/blueprint-compiler",
          "tag": "v0.14.0"
        }
      ]
    },
    {
      "name": "dosage",
      "buildsystem": "meson",
      "builddir": true,
      "sources": [
        {
          "type": "dir",
          "path": "."
        }
      ]
    }
  ]
}
